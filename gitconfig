[init]
  defaultBranch = main

[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta

[interactive]
  diffFilter = delta --color-only

[fetch]
  prune = true

[core]
  autocrlf = input

[alias]
  aliases = !git config --get-regexp '^alias\\.' | cut -c 7- | sed 's/ / = /'
  cbranches = !git branch | rg -v 'master|main|develop' | xargs git branch -D

[credential]
  helper = osxkeychain

[user]
	name = Richard Harrah
	email = topplethenunnery@gmail.com

[includeIf "gitdir:~/github/singlestone/"]
  path = ~/.gitconfig-singlestone

[includeIf "gitdir:~/github/VeteranCrowd/"]
  path = ~/.gitconfig-veterancrowd

[includeIf "gitdir:~/evergreen-money/"]
  path = ~/.gitconfig-evergreen-money

[includeIf "gitdir:~/github/money-evergreen/"]
  path = ~/.gitconfig-evergreen-money

[push]
	autoSetupRemote = true

[pull]
	rebase = true
